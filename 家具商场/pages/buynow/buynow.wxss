/* pages/buynow/buynow.wxss */
.address{
  width: 94%;
  height: 18vh;
  background: #fff;
  margin:20rpx auto;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx #F5B223;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.address image{
  width: 70rpx;
  height: 70rpx;
}
.address>view{
  width: 80%;
  height: 80%;
  font-size: 16px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.address>view .adr{
  font-size: 14px;
}
.order{
  width: 94%;
  height: 22vh;
  border-radius:30rpx;
  margin: 10rpx auto;
  background: #fff;
  box-shadow: 0rpx 0rpx 10rpx #F5B223;
  display: flex;
  justify-content: space-around;
  align-items: center;
  
}
.ord1{
  width: 33%;
  height: 80%;
  text-align: center;
}
.ord1 image{
  width: 180rpx;
  height: 180rpx;
  
}
.ord2{
  width: 67%;
  height: 80%;
}
.ord2>view{
  width: 96%;
  font-size: 14px;
}
.title{
  height: 55%;
}
.price{
  height: 25%;
}
.subtotal{
  height: 20%;
  text-align: right;
}
.submit{
  width: 100%;
  height: 8vh;
  background: #fff;
  position: fixed;
  bottom: 0;
  font-size: 16px;
}
.sum{
  width: 70%;
  height: 8vh;
  line-height: 8vh;
  float: left;
  text-align: right;
  box-sizing: border-box;
  padding-right:30rpx; 
}
.sum text{
  color: red;
}
.up{
  width: 30%;
  height: 8vh;
  line-height: 8vh;
  background: #F5B223;
  float: left;
  text-align: center;
  color: #fff;
}