/**index.wxss**/
.container{
  width: 100vw;
  height: 100vh;
}
.swiper{
  width: 100%;
  height: 400rpx;
  background: #000;
  position: relative;
  top: 0;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.product{
  width: 100%;
  
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding-top: 2vh;
}
.product view{
  width: 30%;
  height: 35vh;

  margin-bottom: 2vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-shadow: 4rpx 4rpx 10rpx #ccc;
}
.product view image{
  width: 90%;
  height: 19vh;
}
.product view .title{
  width: 90%;
  height: 6vh;
  font-size: 12px;
  overflow: hidden;
  color: #999;
}
.product view .price{
  width: 90%;
  text-align: left;
  font-size: 15px;
  color: rgba(245, 164, 11, 1);
  font-weight: 600;
}